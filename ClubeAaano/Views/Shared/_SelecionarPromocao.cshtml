<div class="modal fade" id="modalSelecionarPromocao">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Pesquise e selecione a promoção desejada</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label class="control-label col-lg-2 col-md-2 col-sm-3 col-xs-12">Resumo</label>
                    <div class="col-lg-10 col-md-10 col-sm-9 col-xs-12">
                        <input type="text" class="form-control" autocomplete="off" id="txtResumoPromocaoSelecao">
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-lg-offset-2 col-md-offset-2 col-lg-10 col-md-10 col-sm-10 col-xs-12">
                        <button class="btn btn-primary" id="btnBuscarPromocoesSelecao"><i class="fa fa-search"></i> Buscar</button>
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table table-hover" id="tblSelecionarPromocao">
                        <thead>
                            <tr>
                                <th>Resumo</th>
                                <th>Loja</th>
                                <th>Opções</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>

                <div class="clearfix" id="divPaginasSelecaoPromocao">
                    @*Paginação da pesquisa*@
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/ClubeAaanoSite/Telas/SelecionarPromocao.js"></script>

<script>
    $(document).ready(function () {
        $("#btnBuscarPromocoesSelecao").click(function () { BuscarPromocoesParaSelecao(1); });

        $("#txtResumoPromocaoSelecao").keyup(function (event) {
            // Se for a tecla enter
            var keycode = (event.keyCode ? event.keyCode : event.which);
            if (keycode === '13' || keycode === 13) {
                $("#btnBuscarPromocoesSelecao").click();
                $("#txtResumoPromocaoSelecao").focus();
            }
        });
    });
</script>