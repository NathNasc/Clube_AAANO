<div class="modal fade" id="modalSelecionarLoja">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Pesquise e selecione a loja desejada</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label class="control-label col-lg-2 col-md-2 col-sm-3 col-xs-12">Nome</label>
                    <div class="col-lg-10 col-md-10 col-sm-9 col-xs-12">
                        <input type="text" class="form-control" autocomplete="off" placeholder="Pesquise por nome" id="txtNomeLojaSelecao">
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-2 col-md-2 col-sm-3 col-xs-12">Telefone</label>
                    <div class="col-lg-10 col-md-10 col-sm-9 col-xs-12">
                        <input type="text" class="form-control" autocomplete="off" placeholder="Pesquise por telefone" id="txtTelefoneLojaSelecao">
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-lg-offset-2 col-md-offset-2 col-lg-10 col-md-10 col-sm-10 col-xs-12">
                        <button class="btn btn-primary" id="btnBuscarLojasSelecao"><i class="fa fa-search"></i> Buscar</button>
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table table-hover" id="tblSelecionarLoja">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>Telefone</th>
                                <th>Opções</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>

                <div class="clearfix" id="divPaginasSelecaoLoja">
                    @*Paginação da pesquisa*@
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/ClubeAaanoSite/Telas/SelecionarLoja.js"></script>

<script>
    $(document).ready(function () {
        $("#txtTelefoneLojaSelecao").mask("(99) 9999-99999", { placeholder: "(__) _____-____" });
        $("#btnBuscarLojasSelecao").click(function () { BuscarLojasParceirasParaSelecao(1); });
        $('#btnSincronizar').click(function () { SincronizarLojas(); });

        $('#txtNomeLojaSelecao').keypress(function (event) {
            var keycode = (event.keyCode ? event.keyCode : event.which);
            if (keycode === '13' || keycode === 13) {
                BuscarLojasParceirasParaSelecao(1);
            }
        });

        $('#txtTelefoneLojaSelecao').keypress(function (event) {
            var keycode = (event.keyCode ? event.keyCode : event.which);
            if (keycode === '13' || keycode === 13) {
                BuscarLojasParceirasParaSelecao(1);
            }
        });

        $(document).keypress(function (e) {
            if (e.keyCode === 13 || e.keyCode === '13') {
                e.preventDefault();
                return false;
            }
        });
    });
</script>