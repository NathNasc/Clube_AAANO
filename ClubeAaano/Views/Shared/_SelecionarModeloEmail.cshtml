<div class="modal fade" id="modalSelecionarModeloEmail">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Pesquise e selecione o modelo de email desejado</h4>
            </div>

            <div class="modal-body">
                <div class="form-group">
                    <label class="control-label col-lg-2 col-md-2 col-sm-3 col-xs-12">Assunto</label>
                    <div class="col-lg-10 col-md-10 col-sm-9 col-xs-12">
                        <input type="text" class="form-control" autocomplete="off" id="txtAssuntoModeloEmailSelecao">
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-lg-offset-2 col-md-offset-2 col-lg-10 col-md-10 col-sm-10 col-xs-12">
                        <button class="btn btn-primary" id="btnBuscarModelosEmailSelecao"><i class="fa fa-search"></i> Buscar</button>
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table table-hover" id="tblSelecionarModeloEmail">
                        <thead>
                            <tr>
                                <th>Assunto</th>
                                <th>Opções</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>

                <p id="txtLabelEnvio"><strong>Atenção:</strong> O email será enviado para todos os assinantes da pesquisa anterior</p>

                <div class="clearfix" id="divPaginasSelecaoModeloEmail">
                    @*Paginação da pesquisa*@
                </div>
            </div>

            <div class="overlay" id="divCarregandoModeloEmail">
                <i class="fa fa-refresh fa-spin"></i>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/ClubeAaanoSite/Telas/SelecionarModeloEmail.js"></script>

<script>
    $(document).ready(function () {
        $("#btnBuscarModelosEmailSelecao").click(function () { BuscarModelosEmailParaSelecao(1); });

        $("#txtResumoModeloEmailSelecao").keyup(function (event) {
            // Se for a tecla enter
            var keycode = (event.keyCode ? event.keyCode : event.which);
            if (keycode === '13' || keycode === 13) {
                $("#btnBuscarModelosEmailSelecao").click();
                $("#txtResumoModeloEmailSelecao").focus();
            }
        });
    });
</script>