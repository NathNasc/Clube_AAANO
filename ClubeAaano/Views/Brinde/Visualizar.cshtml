@model ClubeAaanoSite.Models.BrindeModel

@{
    ViewBag.Title = "Visualizar brinde";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <div class="content-header">
        <h1>
            Brindes
            <small>Visualizar</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="~/Usuario/Inicio"><i class="fa fa-home"></i> Inicio</a></li>
            <li><a href="~/Brinde/Index"><i class="fa fa-gift"></i> Brindes</a></li>
            <li class="active"><i class="fa fa-eye"></i> Visualizar</li>
        </ol>
    </div>

    <div class="content">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h2 class="box-title">Informações do brinde</h2>
                    </div>
                    <div class="box-body">
                        <div class="form-horizontal">

                            <div class="form-group">
                                @Html.LabelFor(m => m.Descricao, new { @class = "control-label col-lg-2 col-md-2 col-sm-3 col-xs-12" })
                                <div class="col-lg-8 col-md-9 col-sm-9 col-xs-12">
                                    @Html.EditorFor(m => m.Descricao, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off", @readonly = "readonly" } })
                                    @Html.ValidationMessageFor(m => m.Descricao, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(m => m.Sorteio, new { @class = "control-label col-lg-2 col-md-2 col-sm-3 col-xs-12" })
                                <div class="col-lg-3 col-md-4 col-sm-9 col-xs-12">
                                    @Html.EditorFor(m => m.Sorteio, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off", @readonly = "readonly" } })
                                    @Html.ValidationMessageFor(m => m.Sorteio, "", new { @class = "text-danger" })
                                </div>

                                @Html.LabelFor(m => m.Entregue, new { @class = "control-label col-lg-2 col-md-2 col-sm-3 col-xs-12" })
                                <div class="col-lg-1 col-md-1 col-sm-2 col-xs-2">
                                    @Html.EditorFor(m => m.Entregue, new { htmlAttributes = new { @class = "checkbox", @style = "margin-top:5px", @disabled = "disabled" } })
                                    @Html.ValidationMessageFor(m => m.Entregue, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(m => m.NomeAssinante, new { @class = "control-label col-lg-2 col-md-2 col-sm-3 col-xs-12" })
                                <div class="col-lg-8 col-md-9 col-sm-9 col-xs-12">
                                    @Html.HiddenFor(m => m.IdAssinaturaPagSeguro)
                                    @Html.EditorFor(m => m.NomeAssinante, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                    @Html.ValidationMessageFor(m => m.NomeAssinante, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(m => m.DataInclusao, new { @class = "col-lg-3 col-md-3 col-sm-3 col-xs-12 alinhadoDireita small" })
                                <div class="col-lg-2 col-md-3 col-sm-3 col-xs-12 alinhadoDireita small">
                                    @Html.HiddenFor(m => m.DataInclusao)
                                    @Html.DisplayFor(m => m.DataInclusao, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.DataInclusao, "", new { @class = "text-danger" })
                                </div>

                                @Html.LabelFor(m => m.DataAlteracao, new { @class = "col-lg-3 col-md-3 col-sm-3 col-xs-12 alinhadoDireita small" })
                                <div class="col-lg-2 col-md-3 col-sm-3 col-xs-12 alinhadoDireita small">
                                    @Html.HiddenFor(m => m.DataAlteracao)
                                    @Html.DisplayFor(m => m.DataAlteracao, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.DataAlteracao, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="box-footer">
                                <div class="col-lg-offset-2 col-md-offset-2 col-sm-offset-3">
                                    <a class="btn btn-default" href="~/Brinde/Index"><i class="fa fa-mail-reply"></i> Voltar</a>
                                    <a class="btn btn-primary" href="~/Brinde/Editar/@Model.Id"><i class="fa fa-pencil"></i> Editar</a>
                                    <a class="btn btn-danger" href="~/Brinde/Excluir/@Model.Id?Descricao=@(Model.Descricao + (Model.Sorteio.HasValue? " (" + Model.Sorteio.Value.ToString("dd/MM/yyyy") + ")" : ""))"><i class="fa fa-trash"></i> Excluir</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/ClubeAaanoSite/plugins/mask/jquery.mask.min.js"></script>

<script>
    $(document).ready(function () {
        $("#Sorteio").mask("99/99/9999", { placeholder: "__/__/____" });

        $(document).keypress(function (e) {
            var keycode = (e.keyCode ? e.keyCode : e.which);
            if (keycode === 13 || keycode === '13') {
                return false;
                e.preventDefault();
            }
        });
    });
</script>