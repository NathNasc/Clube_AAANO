@model ClubeAaanoSite.Models.ConfirmarIdentificacaoModel

@{
    ViewBag.Title = "Visualizar informações da assinatura";
    Layout = "";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Confirmação de identidade</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link rel="stylesheet" href="~/Scripts/ClubeAaanoSite/components/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Scripts/ClubeAaanoSite/components/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/ClubeAaanoSite/css/AdminLTE.min.css">

</head>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <body class="hold-transition login-page">
        <div class="login-box">
            <div class="login-box-body">
                <center>
                    <h3>Por favor, informe o email utilizado para assinar o plano, assim podemos confirmar sua identidade</h3>
                    <br />
                </center>

                <div class="form-group has-feedback">
                    @Html.HiddenFor(m => m.Identificacao)
                    @Html.EditorFor(m => m.EmailConfirmacao, new { htmlAttributes = new { @class = "form-control", @placeholder = "Email", @autocomplete = "off" } })

                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                </div>

                <div class="row">
                    <div class="col-xs-4 col-xs-offset-4">
                        <button type="submit" class="btn btn-primary">Confirmar</button>
                    </div>
                </div>
            </div>
        </div>
        <script src="~/Scripts/ClubeAaanoSite/components/jquery/dist/jquery.min.js"></script>
        <script src="~/Scripts/ClubeAaanoSite/components/bootstrap/dist/js/bootstrap.min.js"></script>
    </body>
}
</html>
