@model ClubeAaanoSite.Models.LojaParceiraModel

    @{
        ViewBag.Title = "Incluir Loja parceira";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    <div class="content-wrapper">
        <div class="content-header">
            <h1>
                Loja parceira
                <small>Incluir</small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="~/Usuario/Inicio"><i class="fa fa-home"></i> Inicio</a></li>
                <li><a href="~/LojaParceira/Index"><i class="fa fa-hand-peace-o"></i> Lojas parceiras</a></li>
                <li class="active"><i class="fa fa-plus"></i> Incluir</li>
            </ol>
        </div>

        <div class="content">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="box box-primary">

                        <div class="box-header with-border">
                            <h2 class="box-title">Informações da nova loja</h2>
                        </div>

                        @using (Html.BeginForm())
                        {
                            <div class="box-body">
                                <div class="form-horizontal">
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Nome, new { @class = "control-label col-lg-2 col-md-2 col-sm-3 col-xs-12" })
                                        <div class="col-lg-8 col-md-9 col-sm-9 col-xs-12">
                                            @Html.EditorFor(m => m.Nome, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
                                            @Html.ValidationMessageFor(m => m.Nome, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Endereco, new { @class = "control-label col-lg-2 col-md-2 col-sm-3 col-xs-12" })
                                        <div class="col-lg-8 col-md-9 col-sm-9 col-xs-12">
                                            @Html.EditorFor(m => m.Endereco, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
                                            @Html.ValidationMessageFor(m => m.Endereco, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Telefone, new { @class = "control-label col-lg-2 col-md-2 col-sm-3 col-xs-12" })
                                        <div class="col-lg-4 col-md-4 col-sm-9 col-xs-12">
                                            @Html.EditorFor(m => m.Telefone, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
                                            @Html.ValidationMessageFor(m => m.Telefone, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="box-footer">
                                        <div class="col-lg-offset-2 col-md-offset-2 col-sm-offset-3">
                                            <a class="btn btn-default" href="~/LojaParceira/Index"><i class="fa fa-mail-reply"></i> Cancelar</a>
                                            <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Gravar</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Scripts/ClubeAaanoSite/plugins/jQueryUI/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/ClubeAaanoSite/plugins/mask/jquery.mask.min.js"></script>

    <script>
        $(document).ready(function () {

            $("#Telefone").mask("(99) 9999-99999", { placeholder: "(__) _____-____" });

            $(document).keypress(function (e) {
                if (e.keyCode === 13) {
                    e.preventDefault();
                    return false;
                }
            });
        });
    </script>