@model ClubeAaanoSite.Models.LojaParceiraModel

@{
    ViewBag.Title = "Visualizar loja";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <div class="content-header">
        <h1>
            Lojas parceiras
            <small>Visualizar</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="~/Usuario/Inicio"><i class="fa fa-home"></i> Inicio</a></li>
            <li><a href="~/LojaParceira/Index"><i class="fa fa-hand-peace-o"></i> Lojas parceiras</a></li>
            <li class="active"><i class="fa fa-eye"></i> Visualizar</li>
        </ol>
    </div>

    <div class="content">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h2 class="box-title">Informações da loja</h2>
                    </div>
                    <div class="box-body">
                        <div class="form-horizontal">

                            <div class="form-group">
                                @Html.LabelFor(m => m.Nome, new { @class = "control-label col-lg-2 col-md-2 col-sm-3 col-xs-12" })
                                <div class="col-lg-8 col-md-9 col-sm-9 col-xs-12">
                                    @Html.EditorFor(m => m.Nome, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                    @Html.ValidationMessageFor(m => m.Nome, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(m => m.Endereco, new { @class = "control-label col-lg-2 col-md-2 col-sm-3 col-xs-12" })
                                <div class="col-lg-8 col-md-9 col-sm-9 col-xs-12">
                                    @Html.EditorFor(m => m.Endereco, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                    @Html.ValidationMessageFor(m => m.Endereco, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(m => m.Telefone, new { @class = "control-label col-lg-2 col-md-2 col-sm-3 col-xs-12" })
                                <div class="col-lg-4 col-md-4 col-sm-9 col-xs-12">
                                    @Html.EditorFor(m => m.Telefone, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                    @Html.ValidationMessageFor(m => m.Telefone, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(m => m.DataInclusao, new { @class = "col-lg-3 col-md-3 col-sm-3 col-xs-12 alinhadoDireita small" })
                                <div class="col-lg-2 col-md-3 col-sm-3 col-xs-12 alinhadoDireita small">
                                    @Html.HiddenFor(m => m.DataInclusao)
                                    @Html.DisplayFor(m => m.DataInclusao, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.DataInclusao, "", new { @class = "text-danger" })
                                </div>

                                @Html.LabelFor(m => m.DataAlteracao, new { @class = "col-lg-3 col-md-3 col-sm-3 col-xs-12 alinhadoDireita small" })
                                <div class="col-lg-2 col-md-3 col-sm-3 col-xs-12 alinhadoDireita small">
                                    @Html.HiddenFor(m => m.DataAlteracao)
                                    @Html.DisplayFor(m => m.DataAlteracao, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.DataAlteracao, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="box-footer">
                                <div class="col-lg-offset-2 col-md-offset-2 col-sm-offset-3">
                                    <a class="btn btn-default" href="~/LojaParceira/Index"><i class="fa fa-mail-reply"></i> Voltar</a>
                                    <a class="btn btn-primary" href="~/LojaParceira/Editar/@Model.Id"><i class="fa fa-pencil"></i> Editar</a>
                                    <a class="btn btn-danger" href="~/LojaParceira/Excluir/@Model.Id?Descricao=@(Model.Nome + " (" + Model.Telefone + ")")"><i class="fa fa-trash"></i> Excluir</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/ClubeAaanoSite/Telas/Geral.js"></script>

<script>
    $(document).ready(function () {

        $("#Telefone").val(FormatarTelefone($("#Telefone").val()));

        $(document).keypress(function (e) {
            if (e.keyCode === 13) {
                e.preventDefault();
                return false;
            }
        });
    });
</script>